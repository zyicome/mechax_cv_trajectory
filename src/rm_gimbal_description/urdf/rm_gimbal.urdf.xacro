<?xml version="1.0" encoding="utf-8"?>

<robot name="rm_gimbal" xmlns:xacro="http://ros.org/wiki/xacro">

  <link name="leftodom" />

  <link name="left_gimbal_link" />

  <joint name="left_gimbal_joint" type="floating">
    <parent link="leftodom" />
    <child link="left_gimbal_link" />
  </joint>

  <link name="rightodom" />

  <link name="right_gimbal_link" />

  <joint name="right_gimbal_joint" type="floating">
    <parent link="rightodom" />
    <child link="right_gimbal_link" />
  </joint>

  <link name="bigodom" />

  <joint name="bigodom_leftodom_joint" type="fixed">
    <origin xyz="0.00 -0.10 0" rpy="0 0 0" />
    <parent link="leftodom" />
    <child link="bigodom" />
  </joint>

  <joint name="bigodom_rightodom_link" type="fixed">
    <origin xyz="0.0 -0.10 0" rpy="0 0 0" />
    <parent link="bigodom" />
    <child link="rightodom" />
  </joint>

  <link name="big_gimbal_link" />

  <joint name="big_gimbal_joint" type="floating">
    <parent link="bigodom" />
    <child link="big_gimbal_link" />
  </joint>

  <link name="front_camera_link"/>

  <joint name="front_camera_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="big_gimbal_link" />
    <child link="front_camera_link" />
  </joint>

  <link name="front_camera_optical_frame" />

  <joint name="front_camera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}" />
    <parent link="front_camera_link" />
    <child link="front_camera_optical_frame" />
  </joint>

  <link name="back_camera_link" />

  <joint name="back_camera_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 ${pi/2}" />
    <parent link="big_gimbal_link" />
    <child link="back_camera_link" />
  </joint>

  <link name="back_camera_optical_frame" />

  <joint name="back_camera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}" />
    <parent link="back_camera_link" />
    <child link="back_camera_optical_frame" />
  </joint>

  <link name="left_camera_link" />

  <joint name="left_camera_joint" type="fixed">
    <origin xyz="0.0481 0.00 0.047" rpy="0 ${pi/360} ${pi/180}" />
    <parent link="left_gimbal_link" />
    <child link="left_camera_link" />
  </joint>

  <link name="left_camera_optical_frame" />

  <joint name="left_camera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}" />
    <parent link="left_camera_link" />
    <child link="left_camera_optical_frame" />
  </joint>

  <link name="right_camera_link" />

  <joint name="right_camera_joint" type="fixed">
    <origin xyz="0.050 0.000 0.040" rpy="0 0 -${pi/180}" />
    <parent link="right_gimbal_link" />
    <child link="right_camera_link" />
  </joint>

  <link name="right_camera_optical_frame" />

  <joint name="right_camera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}" />
    <parent link="right_camera_link" />
    <child link="right_camera_optical_frame" />
  </joint>

</robot>
